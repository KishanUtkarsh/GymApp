<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlanActivity"
    android:padding="20dp"
    >
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nestedscrolableview">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:id="@+id/mondayRelLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MONDAY"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/mondaytv"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:layout_alignParentRight="true"
                    android:id="@+id/mondayedittv"
                    android:layout_marginRight="15dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mondayrv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mondaytv"
                    android:layout_marginTop="10dp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/tuesdayRelLayout"
                android:layout_below="@+id/mondayRelLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TUESDAY"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/tuesdaytv"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:layout_alignParentRight="true"
                    android:id="@+id/tuesdayedittv"
                    android:layout_marginRight="15dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tuesdayrv"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tuesdaytv"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/wednesdayRelLayout"
                android:layout_below="@+id/tuesdayRelLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WEDNESDAY"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/wednesdaytv"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:layout_alignParentRight="true"
                    android:id="@+id/wednesdayedittv"
                    android:layout_marginRight="15dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/wednesdayrv"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/wednesdaytv"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/thrusdayRelLayout"
                android:layout_below="@+id/wednesdayRelLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="THRUSDAY"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/thrusdaytv"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:layout_alignParentRight="true"
                    android:id="@+id/thrusdayedittv"
                    android:layout_marginRight="15dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/thrusdayrv"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/thrusdaytv"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/fridayRelLayout"
                android:layout_below="@+id/thrusdayRelLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FRIDAY"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/fridaytv"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:layout_alignParentRight="true"
                    android:id="@+id/fridayedittv"
                    android:layout_marginRight="15dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fridayrv"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/fridaytv"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/saturdayRelLayout"
                android:layout_below="@+id/fridayRelLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SATURDAY"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/saturdaytv"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:layout_alignParentRight="true"
                    android:id="@+id/saturdayedittv"
                    android:layout_marginRight="15dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/saturdayrv"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/saturdaytv"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/sundayRelLayout"
                android:layout_below="@+id/saturdayRelLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SUNDAY"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/sundaytv"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:layout_alignParentRight="true"
                    android:id="@+id/sundayedittv"
                    android:layout_marginRight="15dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sundayrv"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/sundaytv"/>

            </RelativeLayout>

            

        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/notAddedPlanrl">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seems like you didn't add any plans Right now"
            android:id="@+id/txtexplain"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addPlanbtn"
            android:text="add a plan"
            android:layout_below="@+id/txtexplain"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>

</RelativeLayout>